<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp">

    <RelativeLayout
        android:id = "@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id = "@+id/sido"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text = "시도 ▼" />

        <TextView
            android:id = "@+id/sigungu"
            android:layout_toRightOf="@id/sido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text = "시군구 ▼"
            android:visibility="invisible"/>

        <TextView
            android:id = "@+id/shelter"
            android:layout_toRightOf="@id/sigungu"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text = "보호소명 ▼"
            android:visibility="invisible"/>

        <TextView
            android:id = "@+id/kindUp"
            android:layout_below="@id/sido"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text = "축종 ▼" />

        <TextView
            android:id = "@+id/kindDown"
            android:layout_below="@id/sido"
            android:layout_toRightOf="@id/kindUp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text = "품종 ▼"
            android:visibility="invisible"/>


        <TextView
            android:id = "@+id/sido_code"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/sigungu_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sido"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id = "@+id/shelter_code"
            android:layout_toRightOf="@id/sigungu"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:visibility="invisible"/>

        <TextView
            android:id = "@+id/kindUp_code"
            android:layout_below="@id/sido"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:visibility="invisible" />

        <TextView
            android:id = "@+id/kindDown_code"
            android:layout_below="@id/sido"
            android:layout_toRightOf="@id/kindUp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_gravity="end"
        android:layout_toEndOf="@id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_light"
        android:text="조회"
        android:textColor="@color/gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_abandoned_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_animal"/>




</LinearLayout>