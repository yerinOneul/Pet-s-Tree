<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="HardcodedText"
    >

    <ImageView
        android:id="@+id/animal_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:background="@color/green_light"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이: " />
            <TextView
                android:id="@+id/animal_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0살추정" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별: " />
            <TextView
                android:id="@+id/animal_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="암컷" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중: " />
            <TextView
                android:id="@+id/animal_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0(Kg)" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="품종: " />
            <TextView
                android:id="@+id/animal_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[개] 믹스견" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발견장소: " />
            <TextView
                android:id="@+id/animal_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OO동 000-0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호소이름: " />
            <TextView
                android:id="@+id/animal_shelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유기동물보호소" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>